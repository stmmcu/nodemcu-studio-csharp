<Window x:Class="NodeMCU_Studio_2015.Console"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NodeMCU_Studio_2015"
        mc:Ignorable="d"
        Title="Console" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label x:Name="Label" Grid.Row="0" Grid.Column="0" Content="Excute:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <DockPanel Grid.Row="0" Grid.Column="1" LastChildFill="True">
            <Button x:Name="Execute" Content="Execute" DockPanel.Dock="Right" Click="Execute_Click"/>
            <TextBox x:Name="TextBox" HorizontalAlignment="Stretch" Height="23" TextWrapping="Wrap" ToolTip="Enter code here..." />
        </DockPanel>
        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="ConsoleTextBox" FontFamily="Consolas" Text=">" IsReadOnly="True"/>
    </Grid>
</Window>
